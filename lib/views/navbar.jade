nav.navbar.navbar-default.navbar-static-top
  - var nav = {}; nav[title] = 'active'
  .container
    .navbar-header
      button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') #{siteName}
    #navbar-collapse.collapse.navbar-collapse
      ul.nav.navbar-nav
        li(class='#{nav.Home}')
          a(href='/') Home
        if user
          li(class='#{nav.Profile}')
            a(href='/profile') My Profile
      if user
        form(action='/logout', method='POST', id="logout_form")
          ul.nav.navbar-nav.navbar-right
            li
              a(onclick="document.getElementById('logout_form').submit();", style="cursor: pointer;") Logout
      else
        ul.nav.navbar-nav.navbar-right
          li(class='#{nav.Login}')
            a(href='/login') Login
          li(class='#{nav.Register} create-account')
            a(href='/register') Create Account